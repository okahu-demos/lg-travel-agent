{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start MCP server",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "${workspaceFolder}/weather-mcp-server.py"
            ],
            "windows": {
                "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
                "args": [
                    "${workspaceFolder}\\weather-mcp-server.py"
                ]
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "isBackground": true,
            "runOptions": {
                "instanceLimit": 1
            },
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$",
                    "message": 0
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Starting Weather MCP Server",
                    "endsPattern": "Application startup complete."
                }
            }
        },
        {
            "label": "Terminate MCP server",
            "type": "shell",
            "command": "pkill",
            "args": [
                "-f",
                "weather-mcp-server.py"
            ],
            "windows": {
                "command": "taskkill",
                "args": [
                    "/F",
                    "/IM",
                    "python.exe",
                    "/T"
                ]
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}